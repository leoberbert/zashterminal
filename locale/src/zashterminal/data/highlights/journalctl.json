{
    "name": "journalctl",
    "description": "Highlights for journalctl (systemd logs) output",
    "triggers": [
        "journalctl",
        "journald",
        "syslog"
    ],
    "enabled": true,
    "rules": [
        {
            "name": "Emergency/Alert",
            "pattern": "\\b(emerg|alert)\\b",
            "colors": [
                "bold red"
            ],
            "enabled": true,
            "description": "Highlights emergency and alert log levels"
        },
        {
            "name": "Critical/Error",
            "pattern": "\\b(crit|err)\\b",
            "colors": [
                "red"
            ],
            "enabled": true,
            "description": "Highlights critical and error log levels"
        },
        {
            "name": "Warning",
            "pattern": "\\b(warning)\\b",
            "colors": [
                "yellow"
            ],
            "enabled": true,
            "description": "Highlights warning log level"
        },
        {
            "name": "Notice/Info",
            "pattern": "\\b(notice|info)\\b",
            "colors": [
                "cyan"
            ],
            "enabled": true,
            "description": "Highlights notice and info log levels"
        },
        {
            "name": "Unit Names",
            "pattern": "([\\w@-]+)\\.(service|socket|target|timer|mount|device|swap|scope|slice)",
            "colors": [
                "magenta",
                null
            ],
            "enabled": true,
            "description": "Highlights systemd unit names"
        },
        {
            "name": "Hostname",
            "pattern": "^([A-Z][a-z]{2}\\s+\\d{1,2}\\s+\\d{2}:\\d{2}:\\d{2})\\s+([\\w.-]+)",
            "colors": [
                null,
                "cyan"
            ],
            "enabled": true,
            "description": "Highlights hostname in logs"
        }
    ]
}
